---
import Layout from '../layouts/Layout.astro'
import { renderInnerHTML } from 'number-flow'
---

<Layout>
	<number-flow
		set:html={renderInnerHTML(1234, {
			locales: 'zh-CN',
			format: { style: 'currency', currency: 'USD' },
			numberPrefix: ':',
			numberSuffix: '/mo'
		})}
	/>
</Layout>

<script>
	import 'number-flow'

	const flow = document.getElementsByTagName('number-flow')[0]
	if (flow) {
		flow.locales = 'zh-CN'
		flow.format = { style: 'currency', currency: 'USD' }
		flow.numberPrefix = ':'
		flow.numberSuffix = '/mo'
		flow.update(1234) // hydrate
		flow.update(456)
	}
</script>
